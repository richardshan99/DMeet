.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96px;
  background: transparent;
  display: flex;
  /* padding-bottom: env(safe-area-inset-bottom); */
  /*  position: relative; */
}
.tab-bar::before {
  display: block;
  content: "";
  width: 100%;
  height: 52px;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 8;
  background-color: #fff;
}
.bar_back {
  width: 100%;
  height: 96px;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  z-index: 9;
  background-color: transparent;
}
.bar_back image {
  height: 96px;
}

.tab-bar-top {
  width: 100%;
  height: 96px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  /* padding-bottom: 10px; */
  z-index: 10;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 6px;
  position: relative;
}

.tab-bar-item image {
  width: 23px;
  height: 22px;
}

.tab-bar-item text {
  font-size: 10px;
}

.tab-bar-item .active {
  background: linear-gradient(121deg, #4a97e7, #b57aff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.tab-bar-item .common {
  color: #b4b7bf;
}
.midbutton {
  width: 41px !important;
  height: 40px !important;
}

.badge_num {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  top: -10px;
  right: 16px;
  background-color: red;
  border-radius: 8px;
  color: #fff;
  font-size: 10px;
  z-index: 999999;
}
